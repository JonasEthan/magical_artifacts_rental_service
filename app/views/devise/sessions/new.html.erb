<div class="container">
  <h2>Log in</h2>
  <h5>... and connect back to our MARS community</h5>
  <br>

  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name),
    data: {turbo: false}) do |f| %>

    <div class="form-inputs">
      <%= f.input :username,
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "username" } %>
      <%# <%= f.input :email,
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: "email" } %>
      <%= f.input :password,
                  required: false,
                  input_html: { autocomplete: "current-password" } %>
      <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
    </div>

    <div class="form-actions btn btn-flat">
      <%= f.button :submit, "Log in" %>
    </div>
    <%= link_to "Forgot your password?", new_user_password_path %>
  <% end %>

  <br>
  <p>No account yet?</p><%= link_to "Sign up", new_user_registration_path, class: "btn btn-ghost"  %>
</div>
