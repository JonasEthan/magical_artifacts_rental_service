<div class="navbar navbar-expand-sm navbar-light navbar-lewagon sticky-top <%= "opacities" if request.path == root_path %>" <%= "data-controller=navbar" if request.path == root_path %> data-action="scroll@window->navbar#updateNavbar">
  <div class="container-fluid">
    <div class="navbar-brand">
      <%= link_to image_tag("logo.gif"), root_path %>
      <span class="navbar-brand" data-controller="typed-js"></span>
    </div>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto">
        <% if !user_signed_in? %>
          <li class="nav-item">
            <a class="nav-link btn btn-navbar-ghost" href="/users/sign_up">Sign up</a>
          </li>
          <li class="nav-item">
          <%= link_to "Log in", new_user_session_path, class: "nav-link" %>
          </li>
        <% end %>
        <% if user_signed_in? && request.path == artifacts_path || request.path == dashboards_path %>
          <li class="nav-item">
              <%= link_to "Add an artifact", new_artifact_path, class: "btn btn-navbar-flat" %>
            </li>
        <% end %>
        <% if request.path != artifacts_path %>
          <li class="nav-item active">
              <%= link_to "Discover all", artifacts_path, class: "nav-link" %>
            </li>
        <% end %>
        <% if user_signed_in? && request.path != dashboards_path %>
          <li class="nav-item active">
            <%= link_to "Dashboard", dashboards_path, class: "nav-link" %>
          </li>
        <% end %>
          <li class="nav-item active">
            <%= link_to "Home", root_path, class: "nav-link" %>
          </li>
        <% if user_signed_in? %>
          <li class="nav-item dropdown">
            <img class="avatar dropdown-toggle" id="navbarDropdown" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false" src="https://kitt.lewagon.com/placeholder/users/jonasethan" />
            <div class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
              <%= link_to "Your profile", dashboards_path, class: "dropdown-item" %>
              <%= link_to "Sign out", destroy_user_session_path, data: {turbo_method: :delete}, class: "dropdown-item" %>
          <% end %>
          </li>
      </ul>
    </div>
  </div>
</div>
